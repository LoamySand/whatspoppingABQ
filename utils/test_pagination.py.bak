# test_pagination.py
"""
Debug pagination to see why it stops after 1 page
"""

from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
from webdriver_manager.chrome import ChromeDriverManager
import time

# Setup Chrome
options = Options()
options.add_argument('--headless')
options.add_argument('--no-sandbox')
options.add_argument('--disable-dev-shm-usage')

driver = webdriver.Chrome(
    service=Service(ChromeDriverManager().install()),
    options=options
)

try:
    url = "https://www.visitalbuquerque.org/abq365/events/search-calendar/"
    driver.get(url)
    
    # Wait for page load
    WebDriverWait(driver, 10).until(
        EC.presence_of_element_located((By.CLASS_NAME, "listing-item"))
    )
    time.sleep(2)
    
    for page_num in range(1, 5):
        print(f"\n{'='*60}")
        print(f"Page {page_num}")
        print('='*60)
        
        # Count events
        events = driver.find_elements(By.CLASS_NAME, "listing-item")
        print(f"Events on page: {len(events)}")
        
        # Find next button
        try:
            next_buttons = driver.find_elements(By.CSS_SELECTOR, "a.pagination-next")
            print(f"Next buttons found: {len(next_buttons)}")
            
            if next_buttons:
                next_button = next_buttons[0]
                print(f"Next button class: {next_button.get_attribute('class')}")
                print(f"Next button text: {next_button.text}")
                print(f"Is displayed: {next_button.is_displayed()}")
                print(f"Is enabled: {next_button.is_enabled()}")
                
                # Check if disabled
                classes = next_button.get_attribute('class')
                if 'disabled' in classes:
                    print("❌ Next button is DISABLED - no more pages")
                    break
                else:
                    print("✓ Next button is enabled")
                    
                    # Try to click
                    print("Attempting to click next...")
                    driver.execute_script("arguments[0].click();", next_button)
                    time.sleep(3)
                    print("✓ Clicked successfully")
            else:
                print("❌ No next button found")
                break
                
        except Exception as e:
            print(f"❌ Error with pagination: {e}")
            break
    
finally:
    driver.quit()